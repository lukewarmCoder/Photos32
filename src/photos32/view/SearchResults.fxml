<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="photos32.controller.SearchResultsController">
    <top>
        <HBox spacing="10" padding="10" alignment="CENTER_LEFT" style="-fx-background-color: #EFEFEF;">
            <Button text="Back to Home" onAction="#handleBack" />
            <Text text="Search Results" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Region fx:id="spacer" HBox.hgrow="ALWAYS"/>
            <Button text="Create Album from Results" onAction="#handleCreateAlbum" />
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true">
            <FlowPane fx:id="photoFlowPane" padding="15" hgap="15" vgap="15">
                <!-- Photo thumbnails will be dynamically added here -->
            </FlowPane>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" padding="10">
            <Label fx:id="resultsCountLabel" text="0 photos found" style="-fx-font-size: 14px;" />
        </HBox>
    </bottom>
</BorderPane>